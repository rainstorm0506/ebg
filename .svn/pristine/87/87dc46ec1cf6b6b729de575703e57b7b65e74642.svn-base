/* ============================================== selectbox  ============================================== */
.sbox24,.sbox26,.sbox28,.sbox30,.sbox32,.sbox34,.sbox36,.sbox38,.sbox40{width:150px;
	font-size:12px;font-family:Microsoft YaHei;color:#333;border:1px solid #ccc;
	padding-left:5px;
}
.sbox24{height:24px;padding:2px 2px\0;}
.sbox26{height:26px;padding:3px 3px\0;}
.sbox28{height:28px;padding:4px 4px\0;}
.sbox30{height:30px;padding:5px 5px\0;}
.sbox32{height:32px;padding:6px 5px\0;}
.sbox34{height:34px;padding:7px 5px\0;}
.sbox36{height:36px;padding:8px 5px\0;}
.sbox38{height:38px;padding:9px 5px\0;}
.sbox40{height:40px;padding:10px 5px\0;}
.sbox24,.sbox26,.sbox28,.sbox30,.sbox32,.sbox34,.sbox36,.sbox38,.sbox40{height:auto\9;}
/* =============== ie8 hack =============== */
@media \0 screen {
	.sbox24{padding-top:2px;padding-bottom:2px;}
	.sbox26{padding-top:3px;padding-bottom:2px;}
	.sbox28{padding-top:4px;padding-bottom:3px;}
	.sbox30{padding-top:5px;padding-bottom:4px;}
	.sbox32{padding-top:6px;padding-bottom:5px;}
	.sbox34{padding-top:7px;padding-bottom:6px;}
	.sbox36{padding-top:8px;padding-bottom:7px;}
	.sbox38{padding-top:9px;padding-bottom:8px;}
	.sbox40{padding-top:10px;padding-bottom:9px;}
}
