/* ================================ *** 默认设置 *** ================================ */					
body{.fs(1em)}				   
/* ================================ *** 自适应设置 *** ================================ */
@media only screen and (max-width:370px){						
	body{.fs(0.5em)}					
}
@media only screen and (min-width:370px) and (max-width:420px){						
	body{.fs(0.5781em)}					 
}
@media only screen and (min-width:420px) and (max-width:470px){						
	body{.fs(0.6563em)}					 
}
@media only screen and (min-width:470px) and (max-width:520px){						
	body{.fs(0.7344em)}					 
}
@media only screen and (min-width:520px) and (max-width:570px){						
	body{.fs(0.8125em)}					 
}
@media only screen and (min-width:570px) and (max-width:620px){						
	body{.fs(0.8906em)}					 
}
@media only screen and (min-width:620px) and (max-width:670px){						
	body{.fs(0.9688em)}					 
}
@media only screen and (min-width:670px) and (max-width:720px){						
	body{.fs(1.0469em)}					 
}
@media only screen and (min-width:720px) and (max-width:770px){						
	body{.fs(1.125em)}					 
}
@media only screen and (min-width:770px) and (max-width:820px){						
	body{.fs(1.2031em)}					 
}
@media only screen and (min-width:820px) and (max-width:870px){						
	body{.fs(1.2813em)}					 
}
@media only screen and (min-width:870px) and (max-width:920px){						
	body{.fs(1.3594em)}					 
}
@media only screen and (min-width:920px) and (max-width:970px){						
	body{.fs(1.4375em)}					 
}
@media only screen and (min-width:970px) and (max-width:1020px){						
	body{.fs(1.5156em)}					 
}
@media only screen and (min-width:1020px) and (max-width:1070px){						
	body{.fs(1.5938em)}					 
}
@media only screen and (min-width:1070px) and (max-width:1120px){						
	body{.fs(1.6719em)}					 
}
@media only screen and (min-width:1120px) and (max-width:1170px){						
	body{.fs(1.75em)}					 
}
@media only screen and (min-width:1170px) and (max-width:1220px){						
	body{.fs(1.8281em)}					 
}
@media only screen and (min-width:1200px){						
	body{.fs(1.875em)}					
}
// ========================================================================================  Android 个性配置					   
@media only screen and (device-width:720px) and (-webkit-min-device-pixel-ratio:2){   // 华为							
	body{.fs(1.125em)}						
}						
@media only screen and (device-width:1080px) and (-webkit-min-device-pixel-ratio:3){   // 小米4							
	body{.fs(1.6875em)}						
}						
@media only screen and (device-width:1080px) and (-webkit-min-device-pixel-ratio:2.75){   // 小米 note							
	body{.fs(1.6875em)}						
}						
@media only screen and (device-width:1152px) and (-webkit-min-device-pixel-ratio:3){   // 魅族							
	body{.fs(1.8em)}						
}						
@media only screen and (device-width:1536px) and (-webkit-min-device-pixel-ratio:4){   // 魅族							
	body{.fs(2.4000em)}						
}
// ========================================================================================  iPhone 个性配置					  
// ========================================= 横屏 iPhone 5/5s						
@media only screen and (device-width:320px) and (device-height:320px) and (-webkit-min-device-pixel-ratio:2) and (orientation:landscape){							
	body{.fs(0.5em)}						
}						
@media only screen and (device-width:320px) and (device-height:320px) and (-webkit-min-device-pixel-ratio:2) and (orientation:landscape){							
	body{.fs(0.3em)}						
}						
// ========================================= 横屏 iPhone 6/6p						
@media only screen and (device-width:375px) and (-webkit-min-device-pixel-ratio:2){							
	body{.fs(0.5859em)}						
}						
@media only screen and (device-width:375px) and (-webkit-min-device-pixel-ratio:2) and (orientation:landscape){							
	body{.fs(0.3em)}						
}
// ========================================================================================  横，坚屏					
@media only screen and (orientation:landscape) {	// 横屏						
					
}					
@media only screen and (orientation:portrait){	  // 竖屏						
					
}