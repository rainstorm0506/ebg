// ======================================================================== common.less
[class^='sm-wrap']{.mlr(3%);}
.sm-wrap-p{.pb(@20px);}

// ----------------------------------
.radio:extend(.rel_m,.tc){.m_tr(24/@b*@x,3%);
	i{.ww(20/@b);.bor(#d2d2d2,2/@b);.db;
		&,b{.border-radius(100%);}
	}
	&.current{
		i{.bor_c(@mc);}
		b:extend(.rel_m){.bc_ww(8/@b,@mc);.dk;.mt(8/@b*@x);.vt;}
	}
	input{.abs_lt(0,0,-1);.vh;}
}
