			"follows" => $uModel->getFollows($uid), 
			"comments" => $uModel->getComments($uid), 
			"orders" => $uModel->getOrders($uid), 
			"histories" => $uModel->getHistories($uid), 
			"growLogs" => $uModel->getGrowLogs($uid), 
			"addresses" => $uModel->getUserAddresses($uid),
